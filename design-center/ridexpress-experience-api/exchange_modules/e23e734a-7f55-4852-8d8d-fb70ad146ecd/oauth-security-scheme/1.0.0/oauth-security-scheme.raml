#%RAML 1.0 SecurityScheme
type: OAuth 2.0
describedBy:
  headers:
    Authorization: string
  queryParameters:
    access_token: string
  responses:
    401:
      description: Unauthorized
    403:
      description: Bad token
settings:
  authorizationUri: http://ridexpress.okta.com/authorize
  accessTokenUri: https://ridexpress.okta.com/access-token
  authorizationGrants: [authorization_code, implicit]